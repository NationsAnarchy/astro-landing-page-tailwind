---
import Logo from '../assets/logo.svg'
import App from '../assets/app.svg'
import Couch from '../assets/couch.png'
import Dots from '../assets/dots.svg'
import Lamp from '../assets/lamp.png'
import LogoMark from '../assets/logomark.svg'
import Partner1 from '../assets/partner1.svg'
import Partner2 from '../assets/partner2.svg'
import Partner3 from '../assets/partner3.svg'
import Partner4 from '../assets/partner4.svg'
import Partner5 from '../assets/partner5.svg'
import Partner6 from '../assets/partner6.svg'
import Partner7 from '../assets/partner7.svg'
import Table from '../assets/table.png'
---

<!DOCTYPE html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <link rel='icon' type='image/svg+xml' href={LogoMark} />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Modern Landing Page with Astro and Tailwind</title>
    </head>
    <body
        class='mx-auto max-w-[2000px] bg-white text-neutral-900 dark:bg-neutral-800 dark:text-neutral-200'>
        <nav class='mx-auto bg-amber-400 p-4'>
            <div class='container mx-auto flex items-center justify-between'>
                <a
                    href='/'
                    class='z-50 rounded-sm ring-neutral-900 ring-offset-4 ring-offset-amber-400 transition-opacity hover:opacity-75 focus:outline-none focus-visible:ring-4 lg:absolute lg:left-1/2 lg:top-9 lg:-translate-x-1/2'
                    aria-label='Go to homepage'>
                    <img
                        src={Logo}
                        width='200'
                        class='w-48 md:w-64 lg:w-72'
                        alt='Home Smart Logo'
                    />
                </a>
                <button
                    id='menu'
                    class='rounded-sm text-neutral-900 ring-neutral-900 ring-offset-4 ring-offset-amber-400 transition-colors hover:text-neutral-600 focus:outline-none focus-visible:ring-4 lg:hidden'
                    aria-expanded='false'
                    aria-label='Open Menu'>
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        class='h-8 w-8'
                        fill='none'
                        viewBox='0 0 24 24'
                        stroke='currentColor'
                        stroke-width='2'>
                        <path
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            d='M4 6h16M4 12h16M4 18h16'></path>
                    </svg>
                </button>
                <div
                    role='menubar'
                    class='absolute right-0 left-0 top-16 z-40 hidden flex-col items-center gap-4 bg-amber-400 p-6 text-center text-lg shadow-xl lg:static lg:flex lg:w-full lg:flex-row lg:justify-between lg:shadow-none'>
                    <a
                        role='menuitem'
                        class='rounded-sm py-1 px-6 ring-neutral-900 ring-offset-4 ring-offset-amber-400 transition-colors hover:text-neutral-600 focus:outline-none focus-visible:ring-4 dark:text-neutral-900'
                        href='/'>Home</a
                    >
                    <a
                        role='menuitem'
                        class='rounded-sm py-1 px-6 ring-neutral-900 ring-offset-4 ring-offset-amber-400 transition-colors hover:text-neutral-600 focus:outline-none focus-visible:ring-4 dark:text-neutral-900 lg:mr-auto'
                        href='/'>
                        Contact
                    </a>
                    <a
                        role='menuitem'
                        class='rounded-sm py-1 px-6 ring-neutral-900 ring-offset-4 ring-offset-amber-400 transition-colors hover:text-neutral-600 focus:outline-none focus-visible:ring-4 dark:text-neutral-900'
                        href='/'>
                        Login
                    </a>
                    <a
                        role='menuitem'
                        class='rounded-md bg-teal-900 py-2 px-6 text-white shadow-xl ring-neutral-900 ring-offset-4 ring-offset-amber-400 transition-shadow hover:shadow-none focus:outline-none focus-visible:ring-4'
                        href='/'>
                        Sign Up
                    </a>
                </div>
            </div>
        </nav>
        <header class='relative pt-16 md:pt-24 lg:pt-48'>
            <div
                class='absolute inset-0 bottom-8 -z-10 bg-gradient-to-b from-amber-400 to-amber-600 md:bottom-24 xl:bottom-32'>
            </div>
            <div
                class='container mx-auto grid grid-rows-1 place-items-end px-2'>
                <img
                    src={Couch}
                    class='col-start-1 col-end-2 row-start-1 row-end-2 mx-auto'
                    alt='Couch'
                />
                <img
                    src={App}
                    class='col-start-1 col-end-2 row-start-1 row-end-2 mx-auto w-40 sm:w-52 md:w-64 lg:w-72'
                    alt='app'
                />
            </div>
        </header>
        <main
            class='grid gap-12 overflow-hidden px-8 sm:gap-16 md:gap-24 lg:gap-32'>
            <a
                href='#'
                class='mx-auto my-12 flex gap-2 rounded-md bg-amber-400 py-2 px-6 shadow-xl ring-neutral-900 ring-offset-4 ring-offset-white transition-shadow hover:shadow-none focus:outline-none focus-visible:ring-4 dark:text-neutral-900 dark:ring-amber-400 dark:ring-offset-neutral-800'>
                <svg
                    xmlns='http://www.w3.org/2000/svg'
                    class='h-6 w-6'
                    fill='none'
                    viewBox='0 0 24 24'
                    stroke='currentColor'
                    stroke-width='2'>
                    <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        d='M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4'
                    ></path>
                </svg>
                <span>Download the App</span>
            </a>
            <section aria-labelledby='qualities' class='relative'>
                <img
                    src={Dots}
                    class='absolute top-1/2 -left-24 hidden -translate-y-1/2 lg:block xl:-left-7'
                    alt='dots'
                    aria-hidden='true'
                />
                <img
                    src={Dots}
                    class='absolute top-1/2 -right-24 hidden -translate-y-1/2 lg:block xl:-right-7'
                    alt='dots'
                    aria-hidden='true'
                />
                <h2 id='qualities' class='sr-only'>Our Qualities</h2>
                <div
                    class='container mx-auto flex max-w-5xl flex-wrap items-start justify-center gap-12 md:justify-between'>
                    <div
                        class='grid justify-items-center gap-4 text-center md:flex-1'>
                        <div class='rounded-full border-8 border-amber-400 p-4'>
                            <svg
                                xmlns='http://www.w3.org/2000/svg'
                                class='h-14 w-14'
                                fill='none'
                                viewBox='0 0 24 24'
                                stroke='currentColor'
                                stroke-width='2'>
                                <path
                                    stroke-linecap='round'
                                    stroke-linejoin='round'
                                    d='M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z'
                                ></path>
                            </svg>
                        </div>
                        <h3 class='text-3xl font-bold'>Safe</h3>
                        <p>
                            Our products are secure and private out-of-the-box
                        </p>
                    </div>
                    <div
                        class='grid justify-items-center gap-4 text-center md:flex-1'>
                        <div class='rounded-full border-8 border-amber-400 p-4'>
                            <svg
                                xmlns='http://www.w3.org/2000/svg'
                                class='h-14 w-14'
                                fill='none'
                                viewBox='0 0 24 24'
                                stroke='currentColor'
                                stroke-width='2'>
                                <path
                                    stroke-linecap='round'
                                    stroke-linejoin='round'
                                    d='M13 10V3L4 14h7v7l9-11h-7z'></path>
                            </svg>
                        </div>
                        <h3 class='text-3xl font-bold'>Efficient</h3>
                        <p>Feel good about your wallet and the environment</p>
                    </div>
                    <div
                        class='grid justify-items-center gap-4 text-center md:flex-1'>
                        <div class='rounded-full border-8 border-amber-400 p-4'>
                            <svg
                                xmlns='http://www.w3.org/2000/svg'
                                class='h-14 w-14'
                                fill='none'
                                viewBox='0 0 24 24'
                                stroke='currentColor'
                                stroke-width='2'>
                                <path
                                    stroke-linecap='round'
                                    stroke-linejoin='round'
                                    d='M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z'
                                ></path>
                            </svg>
                        </div>
                        <h3 class='text-3xl font-bold'>Proven</h3>
                        <p>Leading the Smart Home world for 10 years</p>
                    </div>
                </div>
            </section>
            <section
                aria-labelledby='partners'
                class='grid place-items-center gap-8 text-center'>
                <div class='grid gap-4'>
                    <h2 id='partners' class='text-4xl font-bold text-amber-400'>
                        Our Partners
                    </h2>
                    <p class='w-full max-w-lg'>
                        We’ve partnered with hundreds of smart home brands to
                        help you create a smart home that fits your needs and
                        doesn’t lock you in.
                    </p>
                </div>
                <div
                    class='mx-auto flex max-w-2xl flex-wrap justify-center gap-8 md:gap-x-16'>
                    <div
                        class='rounded-md bg-white p-4 shadow-md dark:bg-neutral-600 dark:shadow-xl'>
                        <img src={Partner1} alt='Partner' class='h-16 w-16' />
                    </div>
                    <div
                        class='rounded-md bg-white p-4 shadow-md dark:bg-neutral-600 dark:shadow-xl'>
                        <img src={Partner2} alt='Partner' class='h-16 w-16' />
                    </div>
                    <div
                        class='rounded-md bg-white p-4 shadow-md dark:bg-neutral-600 dark:shadow-xl'>
                        <img src={Partner3} alt='Partner' class='h-16 w-16' />
                    </div>
                    <div
                        class='rounded-md bg-white p-4 shadow-md dark:bg-neutral-600 dark:shadow-xl'>
                        <img src={Partner4} alt='Partner' class='h-16 w-16' />
                    </div>
                    <div
                        class='rounded-md bg-white p-4 shadow-md dark:bg-neutral-600 dark:shadow-xl'>
                        <img src={Partner5} alt='Partner' class='h-16 w-16' />
                    </div>
                    <div
                        class='rounded-md bg-white p-4 shadow-md dark:bg-neutral-600 dark:shadow-xl'>
                        <img src={Partner6} alt='Partner' class='h-16 w-16' />
                    </div>
                    <div
                        class='rounded-md bg-white p-4 shadow-md dark:bg-neutral-600 dark:shadow-xl'>
                        <img src={Partner7} alt='Partner' class='h-16 w-16' />
                    </div>
                </div>
            </section>
            <section aria-labelledby='home' class='relative'>
                <div class='flex flex-wrap-reverse justify-center gap-8'>
                    <div
                        class='flex flex-col flex-wrap items-start gap-6 lg:justify-center'>
                        <div class='flex flex-col flex-wrap items-start gap-2'>
                            <h2 class='text-4xl font-bold'>
                                Relax, you’re home!
                            </h2>
                            <p class='max-w-md'>
                                All our supported hardware includes traditional
                                inputs so you can integrate our products into
                                your house in a way that’s best for everyone.
                            </p>
                        </div>
                        <a
                            href='#'
                            class='flex gap-2 rounded-md bg-amber-400 py-2 px-6 shadow-xl ring-neutral-900 ring-offset-4 ring-offset-white transition-shadow hover:shadow-none focus:outline-none focus-visible:ring-4 dark:text-neutral-900 dark:ring-amber-400 dark:ring-offset-neutral-800'>
                            Sign Up
                        </a>
                    </div>
                    <img src={Table} alt='Table' />
                </div>
                <div
                    class='absolute -bottom-6 -right-32 -z-10 aspect-square rounded-full border-amber-400 md:w-64 md:border-8 lg:w-96 xl:max-w-lg'>
                </div>
                <div
                    class='-bottom-8 -z-10 -mx-8 mt-12 h-24 w-screen bg-teal-900 xl:absolute xl:mt-0 xl:h-48'>
                </div>
            </section>
        </main>
        <section
            aria-labelledby='contact'
            class='container mx-auto overflow-hidden px-8'>
            <div
                class='flex flex-wrap justify-center gap-12 md:gap-6 lg:gap-20'>
                <div class='relative md:max-w-sm md:flex-1'>
                    <img src={Lamp} alt='Lamp' class='mx-auto' />
                    <a
                        href='#'
                        class='mx-auto mt-12 flex w-max gap-2 rounded-md bg-amber-400 py-2 px-6 shadow-xl ring-neutral-900 ring-offset-4 ring-offset-white transition-shadow hover:shadow-none focus:outline-none focus-visible:ring-4 dark:text-neutral-900 dark:ring-amber-400 dark:ring-offset-neutral-800 md:mb-12'>
                        <svg
                            xmlns='http://www.w3.org/2000/svg'
                            class='h-6 w-6'
                            fill='none'
                            viewBox='0 0 24 24'
                            stroke='currentColor'
                            stroke-width='2'>
                            <path
                                stroke-linecap='round'
                                stroke-linejoin='round'
                                d='M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4'
                            ></path>
                        </svg>
                        <span>Download the App</span>
                    </a>
                    <img
                        src={App}
                        alt='app'
                        width='240'
                        class='max-w-16 absolute left-1/2 hidden -translate-x-1/2 drop-shadow-xl md:block xl:max-w-xs'
                    />
                    <div
                        class='-bottom-18 absolute left-1/2 -z-10 aspect-square -translate-x-1/2 rounded-full border-amber-400 md:w-72 md:border-8 lg:w-96'>
                    </div>
                </div>
                <form
                    class='relative my-4 grid w-full gap-8 rounded-lg border-8 border-neutral-900 bg-white p-6 dark:bg-neutral-800 md:my-12 md:max-w-lg md:flex-1 lg:my-16'>
                    <h2 id='contact' class='text-3xl font-bold'>
                        Let’s Connect
                    </h2>
                    <div class='relative'>
                        <input
                            type='text'
                            id='name'
                            class='form-input peer w-full rounded-md border-4 border-amber-400 placeholder-transparent focus:border-amber-400 focus:outline-none focus:ring-4 focus:ring-amber-400 dark:bg-amber-400 dark:text-neutral-900 dark:focus:ring-offset-2'
                            placeholder='Your Name'
                        />
                        <label
                            for='name'
                            class='absolute -top-4 left-2 -translate-y-1/2 text-sm font-bold uppercase text-neutral-500 transition-all peer-placeholder-shown:left-4 peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-neutral-900 peer-focus:-top-4 peer-focus:left-2 peer-focus:text-neutral-600 dark:peer-focus:text-neutral-300'>
                            Your Name
                        </label>
                    </div>
                    <div class='relative'>
                        <input
                            type='email'
                            id='email'
                            class='form-input peer w-full rounded-md border-4 border-amber-400 placeholder-transparent focus:border-amber-400 focus:outline-none focus:ring-4 focus:ring-amber-400 dark:bg-amber-400 dark:text-neutral-900 dark:focus:ring-offset-2'
                            placeholder='Your Email'
                        />
                        <label
                            for='email'
                            class='absolute -top-4 left-2 -translate-y-1/2 text-sm font-bold uppercase text-neutral-500 transition-all peer-placeholder-shown:left-4 peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-neutral-900 peer-focus:-top-4 peer-focus:left-2 peer-focus:text-neutral-600 dark:peer-focus:text-neutral-300'>
                            Your Email
                        </label>
                    </div>
                    <div class='relative'>
                        <textarea
                            name='content'
                            id='content'
                            cols='20'
                            rows='5'
                            class='form-textarea peer w-full resize-none rounded-md border-4 border-amber-400 placeholder-transparent focus:border-amber-400 focus:outline-none focus:ring-4 focus:ring-amber-400 dark:bg-amber-400 dark:text-neutral-900 dark:focus:ring-offset-2'
                            placeholder='How can we help?'></textarea>
                        <label
                            for='content'
                            class='absolute -top-3 left-2 -translate-y-1/2 text-sm font-bold uppercase text-neutral-500 transition-all peer-placeholder-shown:left-4 peer-placeholder-shown:top-6 peer-placeholder-shown:text-neutral-900 peer-focus:-top-4 peer-focus:left-2 peer-focus:text-neutral-600 dark:peer-focus:text-neutral-300'>
                            How can we help?
                        </label>
                    </div>
                    <a
                        role='menuitem'
                        class='w-max rounded-md bg-neutral-900 py-2 px-6 text-white shadow-xl ring-neutral-900 ring-offset-4 ring-offset-white transition-shadow hover:shadow-none focus:outline-none focus-visible:ring-4 dark:ring-offset-amber-400'
                        href='/'>
                        Sign Up
                    </a>
                </form>
            </div>
        </section>
        <script type='module'>
            const navBtn = document.querySelector('#menu')
            const menuBar = document.querySelector('[role="menubar"]')

            navBtn.addEventListener('click', () => {
                const isExpanded = JSON.parse(
                    navBtn.getAttribute('aria-expanded')
                )
                navBtn.setAttribute('aria-expanded', !isExpanded)
                menuBar.classList.toggle('hidden')
                menuBar.classList.toggle('flex')
            })
        </script>
    </body>
</html>
